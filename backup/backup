#!/usr/bin/env bash
set -euo pipefail

function backup_postgres() {

    TEMPFILE=`mktemp` && {
        docker exec -i $1 /usr/bin/pg_dumpall -U postgres -w > $TEMPFILE | gzip -9 > .$1_`date +%F-%H%M`.sql.gz
        rm -f $TEMPFILE
    }

}

backup_postgres postgres
backup_postgres postgres01
backup_postgres postgres02
