#!/usr/bin/env bash
set -euo pipefail

function create_user() {

    sudo adduser --disabled-password --gecos "" $1
    sudo usermod --password $(echo p4ssw0rd | openssl passwd -1 -stdin) $1
    sudo passwd --expire $1

}

function create_operator() {

    create_user $1

    sudo usermod -a -G docker $1

}

